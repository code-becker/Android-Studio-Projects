<?xml version="1.0" encoding="utf-8"?>





<androidx.constraintlayout.widget.ConstraintLayout
xmlns:android="http://schemas.android.com/apk/res/android"
xmlns:app="http://schemas.android.com/apk/res-auto"
xmlns:tools="http://schemas.android.com/tools"
android:id="@+id/main"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:padding="16dp"
android:background="#E0F7FA"
tools:context=".RegisterActivity">

<TextView
    android:id="@+id/textView"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:text="Cadastro"
    android:textSize="24sp"
    android:textStyle="bold"
    android:textColor="#00796B"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintStart_toStartOf="parent"
    app:layout_constraintEnd_toEndOf="parent"
    app:layout_constraintBottom_toTopOf="@+id/editTextNome_Cadastro"
    app:layout_constraintVertical_bias="0.2" />

    <EditText
        android:id="@+id/editTextNome_Cadastro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="12dp"
        android:backgroundTint="#00796B"
        android:hint="Nome de Usuário"
        android:textColor="#000000"
        android:inputType="textEmailAddress"
        android:padding="10dp"
        android:textColorHint="#004D40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <EditText
        android:id="@+id/editTextEmail_Cadastro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#00796B"
        android:textColor="#000000"
        android:hint="E-mail"
        android:inputType="text|textWebEmailAddress"
        android:padding="10dp"
        android:textColorHint="#004D40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNome_Cadastro" />

    <EditText
        android:id="@+id/editTextNumero_Cadastro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#00796B"
        android:hint="Número de Telefone"
        android:inputType="number|numberSigned"
        android:textColor="#000000"
        android:padding="10dp"
        android:textColorHint="#004D40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextEmail_Cadastro" />

    <EditText
        android:id="@+id/editTextSenha_Cadastro"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginTop="28dp"
        android:backgroundTint="#00796B"
        android:hint="Senha"
        android:inputType="textPassword"
        android:textColor="#000000"
        android:padding="10dp"
        android:textColorHint="#004D40"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.1"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextNumero_Cadastro" />

    <Button
        android:id="@+id/btnCadastrar"
        android:layout_width="159dp"
        android:layout_height="75dp"
        android:layout_marginTop="80dp"
        android:backgroundTint="#00796B"
        android:padding="10dp"
        android:text="Cadastrar"
        android:textColor="#FFFFFF"
        android:textColorLink="#E0F7FA"
        android:textSize="20sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editTextSenha_Cadastro" />


</androidx.constraintlayout.widget.ConstraintLayout>